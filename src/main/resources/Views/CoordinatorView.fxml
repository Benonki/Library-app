       </ImageView>

       <Line startX="0.0" startY="80.0" endX="864.0" endY="80.0" stroke="#000" strokeWidth="2.0" />

      <Button fx:id="backButton" layoutX="757.0" layoutY="338.0" mnemonicParsing="false" onAction="#switchToLoginView" text="Wyloguj się" />
